        tag: "美女",
        tags: ["好玩", "好听", "好看", "好吃", "不喜欢", "电影", "音乐", "动漫", "美女", "科技", "穿越", "户外", "流行"],
        followings: ["动漫", "科技"],
        floats: ["全部", "不喜欢"],
        bigs: ["好玩", "好听", "好看", "好吃"]
      });
      });

