script(type='text/template',id='userface-view-template')
  div.user_info#user_info
    div.user_head#user_head.
      <a class="user_list" href="#<%=id%>">
        <img class="face-image" id="big_face"  src="<%=App.util.face_url(face)%>"/>
      </a>
      <% if(id && App.ClipApp.getMyUid() !=id){ %>
      <% if(_.isEmpty(relation)){ %>
      <b class="user_i" style="display:none;"><i class="<%=_i18n('userface.zhui')%>" id="user_zhui"/>
      </b>
      <% }else{ %>
      <b class="user_i" style="display:none;"><i class="<%=_i18n('userface.stop')%>" id="user_stop"/>
      </b>
      <% }} %>
    dl.user_detail.clearfix
      dt.
        <a class="user_list" href="#<%=id%>">
          <%if(name){%>
          <%=App.util.showName(name)%>
          <%} else {%>
          <%}%>
        </a>
      dd.clearfix
        span.icons_frame
          span.icon_follow
            div.
              <a class="following">
                <% if(id == App.ClipApp.getMyUid()){%>
                <%=_i18n('userface.mfollowing')%>(<%=follow%>)<% }else{ %>
                <%=_i18n('userface.following')%>(<%=follow%>)
                <% } %>
              </a> 
          span.icon_block
            div.
              <a class="follower">
                <% if(id == App.ClipApp.getMyUid()){%>
                <%=_i18n('userface.mfollow')%>(<%=followby%>)<% }else{ %>
                <%=_i18n('userface.follow')%>(<%=followby%>)
                <% } %>
              </a>
        div#query.input.
          <input class="text" id="input_keyword" type="text" value="<%if(id == App.ClipApp.getMyUid()){%> <%=_i18n('userface.mysearch')%><%} else { %> <%=_i18n('userface.search')%><%}%>" />
          <input class="search_btn" id="query_button" type="button" title="<%=_i18n('userface.tsearch')%>"/>
