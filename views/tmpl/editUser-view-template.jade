script(type="text/template",id="faceEdit-view-template")
  .edit_head
    .head_img.
      <img id="myface" src="<%=App.util.face_url(face)%>"/>
    .user_name
      <% if(name && name!=""){%>
      span.name.
        <%=name%>
      <%}else{%>
      <div id="set-name">您还没有用户名</div>
      <input type="button" class="set_username" value="设置用户名"/>    
      <%}%>
  .head_link
    iframe(name="post_frame_face",id="post_frame_face",style="display:none;",mce_style="display:none;")
    |<form method="POST" action="<%=App.util.getFace_upUrl()%>" target="post_frame_face" enctype="multipart/form-data">
    .btn_frame
      button.verify(type="submit",id="confirm_face",style="display:none") 确定
      .button_frame
        span
          button.upload(type="button")	
            |上传本地图像
          |<input id="formUpload" class="hifile" type="file" name="image" onchange="return App.ClipApp.UserEdit.onUploadImgChange(this)">

