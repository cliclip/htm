script(type="text/template",id="clippreview-view-template")
  <% if(recommend){ %>
  hgroup.clearfix.
    <a href="/#user/<%=recommend.user.id%>" class="recommened",id="recommend_<%=recommend.user.id%>">
      <div class="user_info_small">
        <img src="<%=App.util.face_url(recommend.user.face) %>" width="50" height="50"/>
        <%=recommend.user.name%>
      </div>
    </a>&nbsp;&nbsp;
    <div class="user_text">
      <%=recommend.text%>
    </div>
    <%}%>
  header#header
    <% if(clip.content && clip.content.image) {%>
    div.article_photo
      | <img src="<%= App.util.url(clip.content.image)%>" />
    <% }if(clip.content && clip.content.text){ %>
    div.article_con
      | <%= clip.content.text %>
    <%}%>
  footer.master
    div.metas.icons_frame
      span.icon_block
        i.icon_biezhen
        | <%=clip.reprint_count?clip.reprint_count:0%> 转载
      span.icon_block
        i.icon_quote
        | <%=clip.reply_count?clip.reply_count:0%> 回复
    div.user_info_small
      <% if(clip.user){ %>
      div.user_more
        | <a class="author" href="/#user/<%=clip.user.id%>" >
        | <img src="<%=App.util.face_url(clip.user.face)%>" width="50" height="50" />
        dl.name
          dt.
            <%=clip.user.name%>
        </a>
      <%}%>
    div.action#opt(style="display:none;").
      <i class="<%=manage[0]%> operate" id="<%=clip.user.id%>:<%=clip.id%>"></i>
      <i class="<%=manage[1]%> operate" id="<%=clip.user.id%>:<%=clip.id%>"></i>
      <i class="<%=manage[2]%> operate" id="<%=clip.user.id%>:<%=clip.id%>"></i>
  span.biezhen
  b.comer_topleft
  b.comer_topright
  b.comer_bottomleft
  b.comer_bottomright

