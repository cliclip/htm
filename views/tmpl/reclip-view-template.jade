script(type="text/template",id="reclip-view-template")
  div.masker_layer
  section.small_pop
    h2.subject_put.
      <% if(count){ %>
      您将收藏<%= count%>条数据
      <% } else { %>
      收
      <% } %>
    ul.pop_body
      li.tag_box
        span.size48.white_48#main_tag_1 好看
        span.size48.blue_48#main_tag_2 好听
        span.size48.orange_48#main_tag_3 好吃
        span.size48.green_48#main_tag_4 好玩
        span.size48.black_48#main_tag_5 讨厌 
      li
        text.obj_tag(type="text",id="obj_tag")
      br
      li.input_textarea
        |<textarea id="reclip_text">备注一下吧~</textarea>
      li.input_checkbox
        label
          input(type="checkbox",id="checkbox")
          | 不公开
      li.btn_group.clearfix
        input.verify(type="button",value="确定",id="submit")
        input.cancel(type="button",value="取消",id="cancel")