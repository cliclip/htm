script(type="text/template",id="organize-view-template")
  div.masker_layer
  section.small_pop
    span.close_w
    h2.subject_note 注
    ul.pop_body
      li.tag_box.
        <span <% if(main_tag.好看) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_1">好看</span>
        <span <% if(main_tag.好听) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_2">好听</span>
        <span <% if(main_tag.好吃) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_3">好吃</span>
        <span <% if(main_tag.好玩) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_4">好玩</span>
        <span <% if(main_tag.精辟) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_5">精辟</span>
        <span <% if(main_tag.酷) { %>class="size48 orange_48"<% }else{%> class="size48 white_48"<% } %> id="main_tag_6">酷</span> 
      li.
        <input type="text" class="obj_tags" id="obj_tag" value="<%=obj_tag.join(",")%>" />
      li.input_textarea.
        <textarea id="organize_text"><%=note%></textarea>
      li.input_checkbox
        label
          | <input type="checkbox" id="memo_private" <% if(pub=="false"){ %>checked="checked" <% } %>/>
          | 不公开
      li.btn_group.clearfix
        input.verify(type="button",id="organize_button",value="确定")
        input.cancel(type="button",id="cancel_button",value="取消")