script(type="text/template",id="following-top-view-template")
  section.follow_frame
    ul.tab_frame
      li(id="follower") <%=_i18n('following.follower')%>
      li.tab(id="following") <%=_i18n('following.following')%>
    ul.empty_user
      div.msg
        p <%=_i18n('following.p')%>
script(type="text/template",id="following-view-template")
  section.follow_frame
    ul.user_list
      li.user
        div.head
          | <a href="#user/<%=id%>">
          | <img src="<%=App.util.face_url(face,50)%>"/>
          | </a>
          p
            | <a href="#user/<%=id%>"><%=name%></a>
        div.tags.tag_box
          <%for(var i=0;i<tag.length;i++){%>
          span.size48.blue_48
            | <%if(tag[i]== "*"){%><a href="#user/<%=id%>"><%=_i18n('following.all')%><%}else{%><a href="#user/<%=id%>/tag/<%=tag[i]%>"><%=tag[i]%><%}%></a>
          <%}%>