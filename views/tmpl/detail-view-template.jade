script(type="text/template",id="detail-view-template")
  div.masker_layer
  div.masker
    a(id="focus",href="#")点
    section.big_pop
      h2.subject_edit
        div.pop_left
          span.breadcrumbs
            //|<%=_i18n('detail.route')%>
        div.pop_right.
          <% if(!App.util.self(user)) {%>
            <i class="comment operate" title="<%=_i18n('detail.comment')%>"></i>
            <!--<i class="refresh operate" title="<%=_i18n('detail.recommend')%>"></i>-->
            <i class="biezhen operate" title="<%=_i18n('detail.reclip')%>"></i>
          <% }else {%>
            <i class="del operate" title="<%=_i18n('detail.delete')%>"></i>
            <!--<i class="refresh operate" title="<%=_i18n('detail.recommend')%>"></i>-->	   
            <i class="change operate" title="<%=_i18n('detail.update')%>"></i>
            <i class="note operate" title="<%=_i18n('detail.memo')%>"></i>
          <% } %>
          <span class="close_w"></span>
      div.pop_left
        ul.forward_log.
          <% for(var i =0; i<users.length; i++){%>
          <li class="user_head">
            <a href="#user/<%= users[i].id%>">
            <img src="<%= App.util.face_url(users[i].face)%>" title="<%=users[i].name%>" alt="<%= users[i].name%>">
            </a>
            <% if(i < users.length-1 ){ %>
               <div class="join"></div>
            <% } %>
          </li>
          <%}%>
      div.pop_right
        section.pop_inner
          article.content
            |&nbsp</br> 
            <%= App.util.contentToHtml(content)%>
          <%= App.util.generatePastTime(updateTime)%>
          dl.comments.clearfix
          div.input_textarea
    div.bottom

script(type="text/template",id="showcomment-view-template")
  | <div class="comment_show" id="<%= id %>">
  <% if (text == "is_del"){ %>
  dd.comment_con.del_comm.
    <a class="marking"><% if(has_child) {%> <%=_i18n('showcomment.pack')%> <%}%></a>
    <%=_i18n('showcomment.text') %><%= App.util.generatePastTime(date)%>
    <% } else {%>
  div.user_head
    <a class="userhead" href="#user/<%=user.id%>"><img src=<%=App.util.face_url(user.face)%> /></a>
  dt
    span.username
      <a href="#user/<%=user.id%>"><%=user.name%> :</a>
    span.text
      <a class="marking"><% if(has_child) {%> <%=_i18n('showcomment.pack')%> <%}%></a><span class="comment_text"><%= App.util.commentToHtml(text)%></span><span class="comment_time">&nbsp&nbsp&nbsp&nbsp<%= App.util.generatePastTime(date)%></span>
  dd.comment_con.
    <div class="comm_link" id="<%= id %>" style="float:right;">
    <% auth = App.util.getMyUid(); if(user.id == auth || auth == clip_owner){%>
    <span id="reply_<%=id%>" style="display:none; float:left;" >
    <a href="javascript:void(0)" class="del_comment" id="<%= id %>"><%=_i18n('showcomment.delete')%></a>&nbsp;|<% } %>
    </span>
    <span>&nbsp;<a href="javascript:void(0)" class="reply_comment" id="<%= id %>"><%=_i18n('showcomment.reply')%></a></span>
    </div>
  <%}%>
  | </div>
        
