script(type="text/template",id="detail-view-template")
  div.masker_layer
  div.masker
    a(id="focus",href="#")点
    section.big_pop
      h2.subject_edit
        div.pop_left
          span.breadcrumbs
            //|<%=_i18n('detail.route')%>
        div.pop_right.
          <% if(!App.ClipApp.isSelf(user)) {%>
            <i class="comment operate" title="<%=_i18n('detail.comment')%>"></i>
            <!--<i class="recommend operate" title="<%=_i18n('detail.recommend')%>"></i>-->
            <i class="reclip operate" title="<%=_i18n('detail.reclip')%>"></i>
          <% }else {%>
            <i class="del operate" title="<%=_i18n('detail.delete')%>"></i>
            <!--<i class="refresh operate" title="<%=_i18n('detail.recommend')%>"></i>-->	   
            <i class="modify operate" title="<%=_i18n('detail.update')%>"></i>
            <i class="note operate" title="<%=_i18n('detail.memo')%>"></i>
          <% } %>
        div.share_button
          <% if(public != "false"){ %>
          div.jiathis_style_32x32
            <% for(var i = 0; i<shareTo.length; i++){ %>
            <a class="jiathis_button_<%=shareTo[i]%>" target="_blank" title="<%= _i18n('snsShare.title_'+shareTo[i])%> " href="http://www.jiathis.com/send/?webid=<%=shareTo[i]%>&url=http%3A%2F%2Fwww.cliclip.com%2F%23clip%2F<%= id.split(":")[0] %>%2F<%= id.split(":")[1] %>&title=<%= _i18n('snsShare.summary')%>">
            <span class="jiathis_txt jtico jtico_<%= shareTo[i]%>"></span></a>
            <% } %>
          <% }else{ %>
          div.share_private
            <a href="javascript:void(0)" title="<%= _i18n('private.title')%>"> <%= _i18n('private.share')%></a>
          <% } %>
        <span class="close_w"></span>
      div.pop_left
        ul.forward_log.
          <% for(var i = 0; i<users.length; i++){%>
          <li class="user_head">
            <a href="#user/<%= users[i].id%>">
            <img src="<%= App.util.face_url(users[i].face,50)%>" title="<%=App.util.showPrefixName(users[i].name)%>" alt="<%= App.util.showPrefixName(users[i].name)%>">
            </a>
            <% if(i < users.length-1){ %>
               <div class="join"></div>
            <% } %>
          </li>
          <%}%>
      div.pop_right
        section.pop_inner
          article.content
            |&nbsp</br> 
            <%= content %>
          <%= App.util.generatePastTime(updateTime)%>
          dl.comments.clearfix
          div.input_textarea
      div.bottom

script(type="text/template",id="showcomment-view-template")
  | <div class="comment_show" id="<%= id %>">
  div.user_head
    <a class="userhead" href="#user/<%=user.id%>"><img src=<%=App.util.face_url(user.face)%> /></a>
  dt
    span.username
      <a href="#user/<%=user.id%>"><%=App.util.showName(user.name)%> :</a>
    span.text
     <span class="comment_text"><%= text%></span><span class="comment_time">&nbsp&nbsp&nbsp&nbsp<%= App.util.generatePastTime(date)%></span>
  dd.comment_con.
    <div class="comm_link" id="<%= id %>" style="float:right;">
    <% auth = App.ClipApp.getMyUid(); if(user.id == auth || auth == cid.split(":")[0]){%>
    <span id="reply_<%=id%>" style="display:none; float:left;" >
    <a href="javascript:void(0)" class="del_comment" id="<%= id %>"><%=_i18n('showcomment.delete')%></a>&nbsp;|<% } %>
    </span>
    <span>&nbsp;<a href="javascript:void(0)" class="reply_comment" id="<%= id %>"><%=_i18n('showcomment.reply')%></a></span>
    </div>
  | </div>
        
