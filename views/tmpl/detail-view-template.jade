script(type="text/template",id="detail-view-template")
  div.masker_layer
  section.big_pop
    h2.subject_edit
      div.pop_left
      div.pop_right
        i.comment
        i.refresh
        i.biezhen
    div.pop_left
      ul.forward_log.
        <%for(var i =0; i<users.length; i++){if( i == 0){%>
        <li class="user_head">
          <img src="<%= App.util.face_url(users[i].face)%>">
        </li>
        <%}else{%>
        <div>向上箭头</div>
        <li class="user_head">
          <img src="<%= App.util.face_url(users[i].face)%>">
        </li>
        <%}}%>
    div.pop_right
      section.pop_inner
        article.content.content2.
          <%for(var i=0; i<content.length; i++){if(content[i].text){%>
          <%= content[i].text %>
          <%}else if(content[i].image){%>
          <img src="<%=App.util.url(content[i].image)%>"/>
          <%}}%>
          <%= time.match(/\d{4}-\d{2}-\d{2}/)%>
          <%= App.util.generatePastTime(time)%>
        dl.comments.clearfix
        div.input_textarea

script(type="text/template",id="showcomment-view-template")
  div.user_head.
    <img src=<%=App.util.face_url(user.face)%> />
  dt.username.
    <a href="#user/<%=user.id%>"><%= user.uid %></a>time <%=App.util.generatePastTime(date)%>
  dd.comment_con.
    <div class="comm_link" id="<%= id %>"><%= text %>
    <div id="reply_<%=id%>" style="display:none;">
    <a href="javascript:void(0)" class="reply_comment" id="<%= id %>">回复</a>
    <% if(auth && (user.uid == auth || auth == clip_owner )){%>
    <a href="javascript:void(0)" class="del_comment" id="<%= id %>">删除</a>
    <% } %>
    </div>
    </div>
          
script(type="text/template",id="addcomm-view-template")
  textarea(id="comm_text")
  div.btn_group.clearfix
    input.verify(type="button",value="确定")
    input.cancel(type="button",value="取消")
