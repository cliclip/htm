script(src="/js/lib/easyXDM.debug.js")
script
  var oauth = !{oauth};
  console.log(oauth);
  var socket = new easyXDM.Socket({
    swf: 'http://192.168.1.3:10000/img/easyxdm.swf',
    swfNoThrottle: true,
    onMessage: function(message, origin){
      var r = JSON.parse(message);
      switch(r[0]){
        case 'ping' : 
          console.log("ping is show !!!");
          break;
        }
      }
  });
  if (oauth == close){
     socket.postMessage(JSON.stringify(["close"]));
  } else if(oauth == error) {
     socket.postMessage(JSON.stringify(["error"]));
  } else {
    socket.postMessage(JSON.stringify(["oauth",oauth]));
  }